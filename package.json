{
  "name": "oaf-routing",
  "version": "3.0.0",
  "main": "dist",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oaf-project/oaf-routing.git"
  },
  "devDependencies": {
    "prettier": "^1.17.1",
    "prettylint": "^1.0.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.0",
    "tslint-sonarts": "^1.9.0",
    "type-coverage": "^2.0.2",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "oaf-side-effects": "^2.0.0",
    "unique-selector": "^0.4.1"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "format": "prettier --write '{src,test}/**/*.{ts,tsx}'",
    "format-lint": "prettylint '{src,test}/**/*.{ts,tsx}'",
    "documentation": "typedoc --excludeNotExported --excludePrivate --out docs src && cp docs_config.yml ./docs/_config.yml",
    "release": "yarn build && yarn lint && yarn type-coverage --strict --ignore-catch --detail && yarn format-lint && yarn publish && yarn documentation"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "typeCoverage": {
    "atLeast": 100
  }
}
