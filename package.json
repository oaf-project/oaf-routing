{
  "name": "oaf-routing",
  "version": "4.0.1",
  "main": "dist",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oaf-project/oaf-routing.git"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^5.3.0",
    "@stryker-mutator/jest-runner": "^5.3.0",
    "@stryker-mutator/typescript-checker": "^5.3.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/experimental-utils": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "codecov": "^3.8.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-typed-fp": "^1.5.0",
    "eslint-plugin-functional": "^3.7.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-sonarjs": "^0.10.0",
    "eslint-plugin-total-functions": "^4.9.0",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "type-coverage": "^2.18.1",
    "typedoc": "^0.22.0",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "oaf-side-effects": "^3.1.0",
    "unique-selector": "^0.5.0"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write '{src,test}/**/*.{ts,tsx}'",
    "documentation": "typedoc --excludeNotExported --excludePrivate --out docs src && cp docs_config.yml ./docs/_config.yml",
    "release": "yarn build && yarn lint && yarn type-coverage && yarn publish && yarn documentation",
    "test": "jest"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "typeCoverage": {
    "atLeast": 100,
    "ignoreCatch": false,
    "strict": true,
    "detail": true
  }
}
